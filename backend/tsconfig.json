{
  "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "outDir": "./build", // output directory
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
  },
  "include": ["src/**/*"] // will compile all files in the src folder
}